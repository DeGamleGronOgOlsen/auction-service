@page "/auction/list"
@model MyApp.Namespace.AuctionListModel
<!DOCTYPE html>
<html>
<head>
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
        crossorigin="anonymous">
    <meta name="viewport" content="width=device-width" />
    <title>Auction List</title>
    <style>
table {
border-collapse: collapse;
}
th,
td {
border: 1px solid blue;
}
.box {
display: flex;
align-items: center;
}
.center {
display: flex;
justify-content: center;
}

img{width: 100px}
</style>
</head>
<body>
<div style="width: 800px; margin: auto">
    <div class="box">
        <h1>Auctions</h1>
    </div>
    <hr />
    @if (Model.Auctions != null)
    {
        <table>
            <thead>
            <th>Auction Id</th>
            <th>Title</th>
            <th>Category</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Effects</th>
            </thead>
            <tbody>
            @foreach (var auction in Model.Auctions)
            {
                <tr>
                    <td class="text-truncate">@auction.AuctionId</td>
                    <td>@auction.AuctionTitle</td>
                    <td>@auction.Category</td>
                    <td>@auction.StartDate.ToString("yyyy-MM-dd")</td>
                    <td>@auction.EndDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        @if (auction.Effects != null && auction.Effects.Any())
                        {
                            <ul>
                                @foreach (var effect in auction.Effects)
                                {
                                    <li>@effect.Title - @effect.Description</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span>No effects</span>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    <hr />
</div>
</body>
</html>